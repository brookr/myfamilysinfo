(function() {
  var app = angular.module('event-directives', []);

  app.directive("eventIndex", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-index.html") %>'
    };
  });

  app.directive("eventNewMedicine", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-new-medicine.html") %>'
    };
  });

  app.directive("eventNewSymptom", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-new-symptom.html") %>'
    };
  });

  app.directive("eventNewTemperature", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-new-temperature.html") %>'
    };
  });

  app.directive("eventNewHeightWeight", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-new-heightweight.html") %>'
    };
  });

  app.directive("eventEdit", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-edit.html") %>'
    };
  });

  app.directive("eventForms", function() {
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular_app/templates/events/event-forms.html") %>',
      controller: ['kidChangeHandler', function(kidChangeHandler) {
        this.form = 0;
        form = this;
        form.hideForm = function() {
          form.form = 0;
        };
        kidChangeHandler.add(form.hideForm);

        this.isSet = function(checkForm) {
          return this.form === checkForm;
        };

        this.setForm = function(activeForm) {
          this.form = activeForm;
        };
      }],
      controllerAs: "form"
    };
  })

})();
