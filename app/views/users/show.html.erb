<h3>User</h3>
<p>Email: <%= @user.email if @user.email %></p>

<%= link_to 'Add Kid', { controller: :kids, action: :new }, class: "button radius" %>

<div id="comments">
<h4>Kids</h4>
<div class="comment">
<% @user.kids.each do |kid| %>
<h6><%= kid.name %></h6>
  <% kid.reminders.each do |reminder| %>
    <p><%= kid.name %> took
    <strong> <%= reminder.name %></strong>
    <%= time_ago_in_words(reminder.updated_at) %> ago </p>
      <%= simple_form_for reminder do |f| %>
        <%= f.submit %>
        </div>
      <% end %>
  <% end %>
<% end %>
</div>

