<div ng-app='crummy'>
  <div ng-hide='current_user'>
    <!-- Login/signup form will go here -->
  </div>
  <div ng-controller='KidListController as kidlist' ng-init='getKidList()'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-4'>
          <div id='kidlist' class='list-group'>
            <div class='list-group-item'><h4>Kids</h4></div>
            <a ng-repeat='kid in kidlist.kids' class='list-group-item' ng-class='{ active: kidlist.current_kid == kid }' ng-click='kidlist.setKid(kid)'>
              {{kid.name}}
            </a>
            <div class='list-group-item' ng-hide='kidlist.show_form'>
              <button class='btn btn-default' ng-click='kidlist.show_form = true'>Add Kid</button>
            </div>
            <form class='list-group-item form-inline' ng-submit='kidlist.create()' ng-show='kidlist.show_form'>
                <input class='form-control' ng-model='kidlist.new_kid.name'></input>
                <button type='submit' class='btn btn-default'>Save</button>
            </form>
          </div>
        </div>
        <div class='col-sm-8'>
          <div class='container'>
            <div class='row'><div class='col-xs-12'>
              <!-- kid details here -->

            </div></div>
            <div class='row'><div class='col-xs-12'>
              <div class="container" ng-app="kid-events" ng-controller="KidEventController">
                <h1 class="text-center">Events</h1>

                <div class="btn-group" dropdown is-open="status.isopen" ng-controller="DropdownCtrl">
                  <button type="button" class="btn btn-primary dropdown-toggle" dropdown-toggle ng-disabled="disabled">
                    Create a new Event <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Medicine</a></li>
                    <li><a href="#">Height/Weight</a></li>
                    <li><a href="#">Temperature</a></li>
                    <li><a href="#">Symptom</a></li>
                  </ul>
                </div>

                <div class="list-group-item" ng-repeat="event in events">
                  <h3 class="text-center">Date: {{event.datetime}}</h3>
                  <h3 class="text-center">Type: {{event.type}}</h3>
                  <h3>{{event.name}}</h3>
                  <h3>{{event.amount}}</h3>
                  <h3>{{event.description}}</h3>
                  <h3>{{event.temperature}}</h3>
                  <h3>{{event.height}}</h3>
                  <h3>{{event.weight}}</h3>
                  <a class="btn btn-primary btn-lg" ng-click="duplicate(event)">Duplicate</a>
                  <a href='' class="btn btn-primary btn-lg" ng-click="delete(event)">Delete</a>
                </div>
<form name="newEvent" ng-submit="create()"><h2>New Event</h2><br>
  <label for="datetime">Date:<br>
    <p class="input-group" ng-controller="DatepickerCtrl">
      <input type="text" class="form-control" datepicker-popup="MM/dd/yyyy" is-open="opened" datepicker-options="dateOptions" ng-required="true" close-text="Close" name="datetime" ng-model="event.datetime" />
      <span class="input-group-btn">
        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
      </span>
    </p>
    <div ng-controller="TimepickerCtrl">
      <timepicker ng-model="mytime"></timepicker>
    </div>
  </label><br>
  <label for="name">Name:<br>
    <input type="text" name="name" ng-model="event.name">
  </label><br>
  <label for="type">Type:<br>
    <input type="text" name="type" ng-model="event.type">
  </label><br>
  <label for="amount">Amount:<br>
    <input type="text" name="amount" ng-model="event.amount">
  </label><br>
  <label for="description">Description:<br>
    <input type="text" name="description" ng-model="event.description">
  </label><br>
  <label for="temperature">Temperature:<br>
    <input type="text" name="temperature" ng-model="event.temperature">
  </label><br>
  <label for="height">Height:<br>
    <input type="text" name="height" ng-model="event.height">
  </label><br>
  <label for="weight">Weight:<br>
    <input type="text" name="weight" ng-model="event.weight">
  </label><br>

  <input type="submit" value="Submit" ng-disabled="newProduct.$invalid"/>
</form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
